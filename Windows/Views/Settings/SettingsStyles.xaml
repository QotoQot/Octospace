<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="SettingsStackPanelMaxWidth">800</x:Double>
    <Style x:Name="SettingsSectionStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="24,12,0,0"/>
    </Style>
    
    <Style x:Name="SettingsSubtitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <x:Double x:Key="SettingsComboBoxWidth">160</x:Double>
    <x:Double x:Key="SettingsSmallComboBoxWidth">80</x:Double>
    <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
</ResourceDictionary>
